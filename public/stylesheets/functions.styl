tag(name, color, font = null)
  &:after
    if font
      color font
    display inline-block
    background-color color
    border solid 1px rgba(0,0,0,.6)
    border-radius 7px
    box-shadow inset 1px 1px 3px 1px rgba(100,100,100,.3)
    content name
    margin auto .3em
    font-size .8em
    padding .1em .5em
    text-align center
    text-shadow 1px 1px rgba(0,0,0,.1)
    vertical-align middle


box-shadow(shadow)
  // http://www.css3.info/preview/box-shadow/
  -moz-box-shadow shadow
  -webkit-box-shadow shadow
  box-shadow shadow

