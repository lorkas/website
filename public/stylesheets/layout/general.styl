border-color = rgba(20,80,100,.5)
border = solid 1px border-color
corner-rounding = 6px
content-width = 1000px
nav-width = 170px
font-color = #222

// serif for body text
serif-fonts = "Crimson Text", "Times New Roman", Times, serif
// sans for titles
sans-fonts = "Source Sans Pro", "Helvetica", "Arial", sans-serif 
// sans-fonts = Helvetica, Arial, 'Liberation Sans', FreeSans, sans-serif

