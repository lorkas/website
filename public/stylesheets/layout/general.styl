border-color = rgba(20,80,100,.5)
border = solid 1px border-color
corner-rounding = 6px
content-width = 1000px
nav-width = 170px
font-color = #222



global-reset()

html
  height 100%
  margin 0
  padding 0
  border 0
  outline 0

body
  @extends html
  background-color white
  color #222
  // font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  // font 1em/1.4 Corbel,'Helvetica Neue',Helvetica,Arial,sans-serif
  font 1em/1.7 "Helvetica Neue Light", "Helvetica Neue", Arial, sans-serif
  font-weight lighter


a, .button
  cursor pointer
  text-decoration none
  color #007
  &:hover
    text-decoration underline
    color #44c

h1, h2, h3, h4, h5, h6
  // font 1em/1.5 Helvetica, Arial, 'Liberation Sans', FreeSans, sans-serif
  font-family Helvetica, Arial, 'Liberation Sans', FreeSans, sans-serif
  margin 0 0 .4em
  color black
header(font-size = 1em)
  font-size font-size
  line-height font-size + .2
h1
  header 1.7em
  font-family 'NewsCycleRegular', Arial, sans-serif
  font-weight lighter
h2
  header 1.5em
  padding-bottom margin-bottom
  border-bottom border
  font-weight lighter
h3
  header 1.3em
  font-family 'NewsCycleRegular', Arial, sans-serif
  font-weight lighter
h4
  header 1.1em
  font-weight bolder
h5
  header
  font-weight bold
h6
  header 0.9em
  font-weight bold
h7
  header 1.1em
  font-family 'NewsCycleRegular', Arial, sans-serif
  font-weight bolder

p
  margin 0
  padding 0 0 .8em 0

