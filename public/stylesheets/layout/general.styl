global-reset()

html
  height 100%
  margin 0
  padding 0
  border 0
  outline 0

body
  @extends html
  background-color white
  color #222
  font 1em/1.3 serif-fonts
  font-weight lighter

h1, h2, h3, h4, h5, h6
  font-family sans-fonts
  color black
  margin 0 0 .2em

header(font-size = 1em)
  font-size font-size
h1
  header 1.7em
  font-weight lighter
h2
  header 1.5em
  border-bottom border
  margin 0 0 .4em
  font-weight lighter
h3
  header 1.4em
  font-weight bold
h4
  header 1.2em
  font-weight bold
h5
  header 1em
  font-weight bold
h6
  header 1em
  font-weight normal

a, .button
  cursor pointer
  text-decoration none
  color #00a
  &:hover
    text-decoration underline
    color #44c
a:visited
  color #33a
a:active
  color #44c

.section
  padding-bottom .8em
.text-block
.description
  @extends .section
  padding 0 1em .8em 1em
