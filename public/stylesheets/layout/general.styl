global-reset()

html
  height 100%
  margin 0
  padding 0
  border 0
  outline 0

body
  @extends html
  background-color white
  color #222
  font 1em/1.7 serif-fonts
  font-weight lighter

a, .button
  cursor pointer
  text-decoration none
  color #00a
  &:hover
    text-decoration underline
    color #44c

h1, h2, h3, h4, h5, h6
  font-family sans-fonts
  color black
  margin 0 0 .4em

header(font-size = 1em)
  font-size font-size
  line-height font-size + .2
h1
  header 1.7em
  font-weight lighter
h2
  header 1.5em
  padding-bottom margin-bottom
  border-bottom border
  font-weight lighter
h3
  header 1.3em
  font-weight lighter
h4
  header 1.1em
  font-weight bolder
h5
  header 1em
  font-weight bold
h6
  header 1em
  font-weight normal

.text-block
.description
  padding 0 1em .8em 1em
