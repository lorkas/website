border-color = rgba(20,80,100,.5)
border = solid 1px border-color
corner-rounding = 6px
content-width = 1000px
nav-width = 170px
font-color = #222



global-reset()

html
  height 100%
  margin 0
  padding 0
  border 0
  outline 0

body
  @extends html
  background-color white
  color #222
  // font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  // font 1em/1.4 Corbel,'Helvetica Neue',Helvetica,Arial,sans-serif
  font 1em/1.7 "Helvetica Neue Light", "Helvetica Neue", Arial, sans-serif
  font-weight lighter


a, .button
  cursor pointer
  text-decoration none
  color #007
  &:hover
    text-decoration underline
    color #44c

h1, h2, h3, h4, h5, h6
  // font 1em/1.5 Helvetica, Arial, 'Liberation Sans', FreeSans, sans-serif
  font-family Helvetica, Arial, 'Liberation Sans', FreeSans, sans-serif
  margin 0 0 .4em
  color black
header(font-size = 1em)
  font-size font-size
  line-height font-size + .2
h1
  header 1.7em
  font-family 'NewsCycleRegular', Arial, sans-serif
  font-weight lighter
h2
  header 1.5em
  padding-bottom margin-bottom
  border-bottom border
  font-weight lighter
h3
  header 1.3em
  font-family 'NewsCycleRegular', Arial, sans-serif
  font-weight lighter
h4
  header 1.1em
  font-weight bolder
h5
  header
  font-weight bold
h6
  header 0.9em
  font-weight bold
.title
  header 1.1em
  font-family 'NewsCycleRegular', Arial, sans-serif
  font-weight bolder

p, .p
  margin 0
  padding 0 0 .8em 0

form
  display table

  label
    white-space nowrap
    display block
    margin .1em
    text-align right
    input, .space
      margin 0 0 0 1em
  input, .space
    display inline-block
    padding .3em
    border border
    size 15em .9em
    line-height .9em
    height 1em
    font inherit
    font-size .9em
    color black
    vertical-align baseline
  .space
    visibility hidden
  input[type="submit"]
    border-radius corner-rounding
    border solid rgba(#aaa, 1) 1px
    padding 0 1em
    size initial 2em
    background-color #eee
    &:hover
      border-style outset
    &:active
      border-style inset
  input[type="checkbox"]
    font-size 0.95em
    line-height 1em
  input.inline[type="checkbox"]
    size 1em
    font-size 1em
    line-height 1em
    margin 0 1.4em 0 .8em

.code
  @extends p
  margin-left 1em
  font .8em/1.1 "PragmataPro", monospace
  white-space pre
  word-wrap break-word

