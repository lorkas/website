@import "header"
@import "footer"
@import "navigation"

.icon svg
  size 30px

#center
  box-shadow( 0 0 8000px -100px rgba(90,150,200,.5))
  min-height 80%
  border border
  position relative
  background-color #fff
  width content-width
  margin 1.5em auto 1em auto
  border-radius corner-rounding
  clearfix()
  & >
    h1.title
      border-radius corner-rounding - 2
      margin -.5em auto 1em auto
      background white
      text-align center
      border border
      // border-top none
      width 80%
      padding .3em 1.3em

    #content
      float right
      display inline-block
      width content-width - nav-width - 18
      margin 0 15px 1em 0

      .p
        margin-bottom .8em

