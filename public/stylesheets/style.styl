@import functions
@import layout
@import objects

global-reset()

#members
  .person
    margin-bottom 1em
    display inline-block

    width 28%
    height 15em
    padding .5em
    margin .4em .5em
    border-top border
    border-left @border-top
    border-right none
    border-bottom @border-right
    vertical-align top

    overflow hidden

    .top, .labels, .bio
      position relative
      & > *
        margin-right .5em
        vertical-align middle

    .top
      .name
        font-size 1.1em
        display inline-block
      a.website
        position relative
        display inline-block
        width 20px
        height 20px
        svg
          absolute top left
          width 100%
          height 100%

    .labels
      .position
        margin-left .5em
        font-size .8em


a.not-found
  fixed top left
  width 100%
  height 100%
  text-align center
  background-color rgba(0,0,0,.7)
  z-index 10000
  & >
    *
      display inline-block
      position relative
    .spacer
      height 100%
      vertical-align middle
      width 0px
    .text
      color white
      &:hover
        color @color
      font-size 3em
      text-shadow .1em .1em .1em rgba(0,0,0,.2)
      vertical-align text-bottom
